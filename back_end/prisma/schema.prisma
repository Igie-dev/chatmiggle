datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  user_id    String   @unique  
  first_name String
  last_name  String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime? @updatedAt
  image      Avatar?
  membered_channel UserChannelMember[]
}

model Channel {
  id              Int             @id @default(autoincrement())
  channel_id      String          @unique
  messages        Message[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  members UserChannelMember[]
  @@index([channel_id])
}

model  UserChannelMember {
id          Int         @id @default(autoincrement())
user_id String? @unique
channe_id String? @unique
users User? @relation(fields: [user_id], references: [user_id])
channels Channel? @relation(fields: [channe_id], references: [channel_id])
}


model Message {
  id         Int      @id @default(autoincrement())
  channel_id String   @unique
  message_id String   @unique
  sender_id  String   @unique
  message    String
  type       String
  channel    Channel  @relation(fields: [channel_id], references: [channel_id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime? @updatedAt
  @@index([message_id])
}

model Otp {
  id        Int      @id @default(autoincrement())
  otp       String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Avatar {
  id       Int    @id @default(autoincrement())
  avatar_id String  @unique
  data     Bytes
  mimetype String
  user     User   @relation(fields: [avatar_id], references: [user_id], onDelete: Cascade)

}
